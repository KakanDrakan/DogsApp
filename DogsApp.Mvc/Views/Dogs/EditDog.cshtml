@model DogsApp.Mvc.Models.Dog

<!DOCTYPE html>
<html>
<head>
    <title>Edit Dog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container py-4">

    <h2>Edit Dog</h2>

    <form action="/edit/@Model.Id" method="post" class="mt-4">
        <div class="mb-3">
            <label class="form-label">Dog name</label>
            <input type="text" value="@Model.Name" name="Name" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Age</label>
            <input type="number" value="@Model.Age" name="Age" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Confirm Edit</button>
        <a href="/" class="btn btn-secondary ms-2">Cancel</a>
    </form>

</body>
</html>
