@model DogsApp.Mvc.Models.Dog[]

<!DOCTYPE html>
<html>
<head>
    <title>All Dogs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container py-4">

    <h1 class="mb-4">All the Dogs</h1>

    @foreach (var dog in Model)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">@dog.Name</h5>
                <p class="card-text">Age: @dog.Age</p>
                <p class="card-text"><small class="text-muted">ID: @dog.Id</small></p>

                <form method="post" action="/delete/@dog.Id" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                </form>

                <a href="/edit/@dog.Id" class="btn btn-warning btn-sm ms-2">Edit</a>
            </div>
        </div>
    }

    <a href="/create" class="btn btn-success mt-4">Create New Dog</a>

</body>
</html>
